<h1>Please input new stock.</h1>

<form action="/stock" method="post">
  <label for="quantity">Quantity:</label>
  <input type="number" name="quantity" id="quantity" min="0">
  <label for="buy_price">Buy Price:</label>
  <input type="number" step="0.01" name="buy_price" id="buy_price" min="0">  
  <label for="sell_price">Sell Price:</label>
  <input type="number" step="0.01" name="sell_price" id="sell_price" min="0">
  <label for="artist">Artist:</label>
  <select name="artist_id" id="artist">
    <% @artists.each do |artist| %>
    <option value="<%= artist.id %>"><%= artist.name %></option>
    <% end %>
  </select>
  <label for="album">Album:</label>
  <select name="album_id" id="album">
    <% @albums.each do |album| %>
    <option value="<%= album.id %>"><%= album.title %></option>
    <% end %>
  </select>

  <br><br>
  <input type="submit" name="Add Stock">
</form>