<h1>Please input new stock.</h1>

<form action="/stock" method="post">
  <label for="quantity">Quantity:</label>
  <input type="number" name="quantity">
  <label for="buy_price">Buy Price:</label>
  <input type="number" step="0.01" name="buy_price" min="0">  
  <label for="sell_price">Sell Price:</label>
  <input type="number" step="0.01" name="sell_price" min="0">
  <label for="artist_id">Artist Id:</label>
  <input type="number" name="artist_id" min=0>
  <label for="album_id">Album Id:</label>
  <input type="number" name="album_id" min=0>
  <input type="submit" name="Add Stock">
</form>