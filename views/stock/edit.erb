<h1>Please edit stock details.</h1>

<form action="/stock/<%= @stock.id %>" method="post">
  <label for="quantity">Quantity:</label>
  <input type="number" name="quantity" id="quantity" value="<%= @stock.quantity %>">
  <label for="buy_price">Buy Price:</label>
  <input type="number" step="0.01" name="buy_price" id="buy_price" min="0" value="<%= @stock.buy_price %>">
  <label for="sell_price">Sell Price:</label>
  <input type="number" step="0.01" name="sell_price" id="sell_price" min="0" value="<%= @stock.sell_price %>">
  <label for="artist">Artist:</label>
  <select name="artist_id" id="artist">
    <% @artists.each do |artist| %>
    <option value="<%= artist.id %>"<%= 'selected' if @stock.album.artist.id == artist.id %>><%= artist.name %></option>
    <% end %>
  </select>
  <label for="album">Album:</label>
  <select name="album_id" id="album">
  <% @albums.each do |album| %>
    <option value="<%= album.id %>"<%= 'selected' if @stock.album.id == album.id %>><%= album.title %></option>
    <% end %>
  </select>

  <br><br>

  <input type="hidden" name="_method" value="put">
  <input type="submit" value="Update Stock">
</form>