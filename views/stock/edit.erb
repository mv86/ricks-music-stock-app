<h1>Please edit stock details.</h1>

<form action="/stock/<%= @stock.id %>" method="post">
  <label for="quantity">Quantity:</label>
  <input type="number" name="quantity" value="<%= @stock.quantity %>">
  <label for="buy_price">Buy Price:</label>
  <input type="number" step="0.01" name="buy_price" min="0" value="<%= @stock.buy_price %>">
  <label for="sell_price">Sell Price:</label>
  <input type="number" step="0.01" name="sell_price" min="0" value="<%= @stock.sell_price %>">
  <label for="artist_id">Artist ID:</label>
  <input type="number" min="0" name="artist_id" value="<%= @stock.artist_id %>">
  <label for="album_id">Album ID:</label>
  <input type="number" min="0" name="album_id" value="<%= @stock.album_id %>">

  <input type="hidden" name="_method" value="put">
  <input type="submit" value="Update Stock">
</form>