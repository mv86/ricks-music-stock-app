<form method="get">
  Search Artist Name
  <input name="search" value="" type="text" />
  <input type="submit" value="search" />
</form>
<br>
<% if @artists_search.count == @artists.count %>
<p></p>
<% elsif @artists_search.count > 0 %>
  <% @artists_search.each do |artist| %>
    <a href="/artists/<%= artist.id %>"><%= artist.name %></a>
  <% end %>
  <br>
<% else %>
  <p>Sorry, no results found! Did you remember to capitalise?</p>
<% end %>

<br>

<h1>These are your current artists:</h1>

<% @artists.each do |artist| %>
  <b>Name:</b> 
  <%= artist.name %>
  <br><br>
  <b>Type:</b> 
  <%= artist.type %>
  <br><br> 
  <b>Genre:</b> 
  <%= artist.genre %>
  <br><br> 
  <a href="/artists/<%= artist.id %>">See all albums in stock</a>
  <br>
  <p>---------------------------------</p>
<% end %>